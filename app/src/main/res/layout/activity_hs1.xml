<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hs1">
<AbsoluteLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hs1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="387dp"
        android:layout_x="2dp"
        android:layout_y="16dp">

        <ImageView
            android:id="@+id/hs1id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hs1" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/hs2id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hs2" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/hs3id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hs3" />




    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="25dp"
        android:text="All Included"
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_x="0dp"
        android:layout_y="417dp" />

    <Button
        android:id="@+id/visit_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="162dp"
        android:layout_y="555dp"
        android:background="@null"
        android:textColor="@color/colorPrimary"
        android:text=" Visit place " />


</AbsoluteLayout>
</ScrollView>
