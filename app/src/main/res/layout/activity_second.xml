<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_bg"
    tools:context=".Second">

    <Button
        android:id="@+id/Hostel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="164dp"
        android:background="@null"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Hostels"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Bachelors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="61dp"
        android:background="@null"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Bachelors"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Residence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="243dp"
        android:background="@null"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Residence"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ConventionHalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="66dp"
        android:layout_marginBottom="128dp"
        android:background="@null"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Convention Halls"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Offices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="125dp"
        android:background="@null"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Offices"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textStyle="bold" />
</RelativeLayout>